{
    "name": "zbooks-for-woocommerce/zbooks-for-woocommerce",
    "description": "Sync WooCommerce orders to Zoho Books",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "talas9",
            "homepage": "https://github.com/talas9"
        }
    ],
    "homepage": "https://github.com/talas9/zbooks-for-woocommerce",
    "support": {
        "issues": "https://github.com/talas9/zbooks-for-woocommerce/issues",
        "source": "https://github.com/talas9/zbooks-for-woocommerce"
    },
    "require": {
        "php": ">=8.2",
        "webleit/zohobooksapi": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "yoast/phpunit-polyfills": "^2.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Zbooks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zbooks\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
