<?xml version="1.0"?>
<ruleset name="ZBooks for WooCommerce Coding Standards">
    <description>WordPress Coding Standards ruleset for ZBooks for WooCommerce plugin.</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude paths -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/build/*</exclude-pattern>
    <exclude-pattern>/dist/*</exclude-pattern>
    <exclude-pattern>/bin/*</exclude-pattern>
    <exclude-pattern>/languages/*</exclude-pattern>
    <exclude-pattern>/temp/*</exclude-pattern>
    <exclude-pattern>/scripts/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    <exclude-pattern>*.asset.php</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="basepath" value="."/> <!-- Strip the file paths down to the relevant bit -->
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/> <!-- Enables parallel processing when available -->

    <!-- Rules: WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
    </rule>

    <!-- Set text domain for I18n -->
    <config name="text_domain" value="zbooks-for-woocommerce"/>

    <!-- Set minimum supported WordPress version -->
    <config name="minimum_wp_version" value="6.4"/>

    <!-- Prefix configuration for hooks, functions, classes -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="zbooks"/>
                <element value="Zbooks"/>
                <element value="ZBOOKS"/>
            </property>
        </properties>
    </rule>

    <!-- Allow theme/plugin specific exceptions -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" value="false"/>
        </properties>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <!-- WooCommerce capabilities are valid when WooCommerce is active -->
    <rule ref="WordPress.WP.Capabilities">
        <properties>
            <property name="custom_capabilities" type="array">
                <element value="manage_woocommerce"/>
                <element value="edit_shop_orders"/>
                <element value="view_woocommerce_reports"/>
            </property>
        </properties>
    </rule>

    <!-- Verify that everything in the global namespace is prefixed -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="zbooks-for-woocommerce"/>
            </property>
        </properties>
    </rule>

    <!-- Enforce PSR-4 autoloading for src/ directory -->
    <rule ref="WordPress.NamingConventions.ValidFunctionName">
        <exclude-pattern>/src/*</exclude-pattern>
    </rule>

    <!-- Allow certain inline SQL for custom queries (use with caution) -->
    <rule ref="WordPress.DB.DirectDatabaseQuery">
        <exclude-pattern>/src/Repository/*</exclude-pattern>
    </rule>
</ruleset>
