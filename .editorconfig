# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP - WordPress Coding Standards uses tabs
[*.php]
indent_style = tab
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = tab
indent_size = 4

# JSON, YAML, Markdown
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_style = tab
indent_size = 4

# Package files
[{package.json,composer.json}]
indent_style = space
indent_size = 2
